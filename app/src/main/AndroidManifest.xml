        <activity
            android:name="screens.ProfileScreen"
            android:exported="false" />
        <activity
            android:name="screens.SearchScreen"
            android:exported="false" />
        <activity
            android:name="screens.HomeScreen"
            android:exported="false" />
        <activity
            android:name="screens.NotificationsScreen"
            android:exported="false" />
        <activity
            android:name="screens.FeedScreen"
            android:exported="false" />
        <activity
            android:name="screens.RegistrationScreen"
            android:exported="false" />
        <activity
            android:name="screens.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name="screens.WelcomeScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>